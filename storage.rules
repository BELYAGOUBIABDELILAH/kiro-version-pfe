rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(ownerId) {
      return isAuthenticated() && request.auth.uid == ownerId;
    }
    
    function isValidImage() {
      return request.resource.size < 5 * 1024 * 1024 && // 5MB limit
             request.resource.contentType.matches('image/.*');
    }
    
    function isValidImageType() {
      return request.resource.contentType in [
        'image/jpeg', 
        'image/jpg', 
        'image/png', 
        'image/webp', 
        'image/gif'
      ];
    }
    
    function isVerifiedProvider(providerId) {
      return firestore.get(/databases/(default)/documents/providers/$(providerId)).data.verified == true;
    }
    
    // Provider images - public read, owner write with validation
    match /provider-images/{providerId}/{imageId} {
      allow read: if true; // Public read access for all users
      
      allow write: if isOwner(providerId) && 
                     isValidImage() &&
                     isValidImageType();
      
      allow delete: if isOwner(providerId);
    }
    
    // Ad images - public read, verified provider write with validation
    match /ad-images/{providerId}/{adId} {
      allow read: if true; // Public read access for approved ads
      
      allow write: if isOwner(providerId) && 
                     isVerifiedProvider(providerId) &&
                     isValidImage() &&
                     isValidImageType();
      
      allow delete: if isOwner(providerId);
    }
    
    // Verification documents - restricted read, provider write
    match /verification-docs/{providerId}/{docId} {
      // Only the provider and admins can read verification documents
      allow read: if isAuthenticated() && 
                    (isOwner(providerId) || 
                     firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin');
      
      allow write: if isOwner(providerId) &&
                     request.resource.size < 10 * 1024 * 1024 && // 10MB limit for documents
                     (request.resource.contentType.matches('image/.*') ||
                      request.resource.contentType.matches('application/pdf'));
      
      allow delete: if isOwner(providerId);
    }
    
    // User profile images
    match /user-images/{userId}/{imageId} {
      allow read: if true; // Public read access
      
      allow write: if isOwner(userId) && 
                     isValidImage() &&
                     isValidImageType();
      
      allow delete: if isOwner(userId);
    }
  }
}
